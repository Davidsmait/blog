---
import type { Page } from 'astro'

export interface Props {
  page: Page
}

const { page } = Astro.props
---

{
  page.lastPage > 1 && (
    <nav class="mb-8 flex w-full grow items-end justify-center">
      <div class="flex gap-4">
        <a
          class={!page.url.prev ? 'no-underline opacity-25' : 'clickable'}
          href={page.url.prev}
        >
          Previous
        </a>
        {page.currentPage} / {page.lastPage}
        <a
          class={!page.url.next ? 'no-underline opacity-25' : 'clickable'}
          href={page.url.next}
        >
          Next
        </a>
      </div>
    </nav>
  )
}
